{
  "compilerOptions": {
    // "rootDir": "./src",
    // "outDir": "./dist",

    "module": "ESNext",
    "target": "esnext",
    "types": ["jest"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
